<book>
    <!-- This is where the book opens to, in this case /landing.xml -->
    <!-- By default it's `landing` -->
    <landing at="landing"/>

    <!-- Substitutions done when looking up things from tag names. -->
    <shortcodes>
        <!-- You might go <verses nodefault="true"> if you want to not have the defaults -->
        <verses>
            <example to="bemis:text"/>
        </verses>
    </shortcodes>
</book>